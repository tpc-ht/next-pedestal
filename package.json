{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "sh scripts/install.sh",
    "lint": "eslint app --fix --ext .ts,.tsx,.js,.jsx --max-warnings 0"
  },
  "dependencies": {
    "next": "14.2.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "npm run lint",
      "prettier --write"
    ]
  },
  "gitHooks": {
    "commit-msg": "node scripts/commit-lint.js verify-commit",
    "pre-commit": "npx --no-install lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "chalk": "4.1.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs": "^0.0.1-security",
    "lint-staged": "^15.2.9",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "5.2.2",
    "yargs-parser": "20.2.9",
    "yorkie": "^2.0.0"
  }
}
